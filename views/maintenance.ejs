<%- include("partials/header") -%>

<h1>Maintenance</h1>
<div class="row">
  <% posts.forEach((post) => { %>
    <div class="post col-md-6 col-lg-4 col-xl-3">
      <div class="card maintenance-post">
        <div class="card-header">
          <p><span class="bg-gabriel text-light pr-1 pl-1"><%= post.date %></span></p>
          <h2><%= post.title %></h2>
        </div>
        <div class="card-body">
          <p> <%= post.content %></p>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-6">
              <form class="" action="/edit" method="post">
                <button class="btn btn-gabriel w-100" type="submit" name="button" value="<%=post._id%>">Edit</button>
              </form>
            </div>
            <div class="col-6">
              <form class="" action="/delete" method="post">
                <button class="btn btn-gabriel w-100" type="submit" name="button" value="<%=post._id%>">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }); %>

  <div class="post col-md-6 col-lg-4 col-xl-3">
    <div class="card maintenance-post">
      <div class="card-header">
        <h2>New post</h2>
      </div>
      <div class="card-body">
      </div>
      <div class="card-footer">
        <form class="" action="/compose" method="get">
          <button class="btn btn-gabriel w-100" type="submit">Compose</button>
        </form>
      </div>
    </div>
  </div>




</div>

<%- include("partials/footer") -%>